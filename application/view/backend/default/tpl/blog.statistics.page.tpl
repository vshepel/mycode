[include "blog.tabs"]

<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">[f:blog:statistics.rows]</h3>
	</div>

	<table class="table">
		<tbody>
		<tr>
			<td>[f:blog:statistics.rows.total]</td>
			<td>{posts-total}</td>
		</tr>
		<tr>
			<td>[f:blog:statistics.rows.shown]</td>
			<td>{posts-show}</td>
		</tr>
		<tr>
			<td>[f:blog:statistics.rows.comments]</td>
			<td>{posts-comments}</td>
		</tr>
		</tbody>
	</table>
</div>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">[f:blog:statistics.comments]</h3>
	</div>

	<table class="table">
		<tbody>
		<tr>
			<td>[f:blog:statistics.comments.total]</td>
			<td>{comments-total}</td>
		</tr>
		</tbody>
	</table>
</div>
