<section class="block">
	<div class="title">[b:user:restore.moduleName]</div>
	<ul class="tabs">
		<li class="active">
			<a href="#">[f:user:auth.tab.entry]</a>
		</li>
		<li>
			<a href="/user/register">[f:user:auth.tab.register]</a>
		</li>
	</ul>
	<div class="block-content">
		<form class="form" role="form" method="post">
			<div class="field">
				<span>[f:user:restore.page.form.loginOrEmail]</span>
				<input type="login" name="login" value="{login}" autofocus />
			</div>
			<div class="panel">
				<button class="btn-primary">
					[f:user:restore.page.form.submit]
				</button>
			</div>
		</form>
	</div>
</section>
